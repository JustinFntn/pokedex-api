{
    "openapi": "3.1.0",
    "info": {
        "title": "Pokemon API",
        "description": "API permettant d'effectuer des opérations CRUD sur les pokémons. API réalisée dans le cadre d'un enseigenement",
        "version": "1.0.0",
        "contact": {
            "name": "Justin FONTAINE",
            "email": "justin.fontaine@etu.univ-littoral.fr"
        }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
        {
            "name": "Types",
            "description": "Opérations sur les types de pokémons"
        },
        {
            "name": "Pokémons",
            "description": "Opérations sur les pokémons"
        },
        {
            "name": "Users",
            "description": "Opérations sur les utilisateurs"
        }
    ],
    "schemes": [
        "http"
    ],
    "components": {
        "securitySchemas": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Type": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 3
                    },
                    "name": {
                        "type": "string",
                        "example": "plante"
                    }
                },
                "example": {
                    "id": 3,
                    "name": "plante"
                }
            },
            "Pokemon": {
                "type": "object",
                "properties": {
                    "nom": {
                        "type": "string",
                        "example": "Bulbizarre"
                    },
                    "pokedexId": {
                        "type": "integer",
                        "example": 1
                    },
                    "type1_id": {
                        "type": "integer",
                        "example": 3
                    },
                    "type2_id": {
                        "type": "integer",
                        "example": 4,
                        "nullable": true
                    },
                    "pre_evolution": {
                        "type": "integer",
                        "example": 0,
                        "nullable": true
                    },
                    "post_evolution": {
                        "type": "integer",
                        "example": 2,
                        "nullable": true
                    }
                },
                "required": [
                    "nom",
                    "pokedexId",
                    "type1_id"
                ],
                "example": {
                    "nom": "Bulbizarre",
                    "pokedexId": 1,
                    "type1_id": 3,
                    "type2_id": 4,
                    "post_evolution": 2
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "exemple@test.fr"
                    },
                    "password": {
                        "type": "string",
                        "format": "hashed password",
                        "example": "password"
                    }
                },
                "example": {
                    "email": "sacha@pokemon.fr",
                    "password": "pikachu"
                }
            }
        },
        "parameters": {
            "pokedexId": {
                "name": "pokedexId",
                "in": "path",
                "required": true,
                "description": "Id du pokémon",
                "schema": {
                    "type": "integer",
                    "minimum": 1,
                    "format": "int64"
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/types": {
            "get": {
                "tags": [
                    "Types"
                ],
                "summary": "Récupérer la liste des types",
                "responses": {
                    "200": {
                        "description": "Liste des types",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Type"
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Aucun type à retourner"
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/types/{id}": {
            "get": {
                "tags": [
                    "Types"
                ],
                "summary": "Récupérer un type par son id",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Id du type recherché",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Type trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Type"
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Aucun type à retourner"
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/pokemons": {
            "get": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Récupérer la liste des pokémons",
                "responses": {
                    "200": {
                        "description": "Liste des pokémons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pokemon"
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Aucun pokémon à retourner"
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Créer un pokemon",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/Pokemon"
                            }
                        }
                    }
                }
            }
        },
        "/pokemons/{pokedexId}": {
            "get": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Récupérer un pokémon par son id",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/pokedexId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pokémon trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Pokemon"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pokémon non trouvé"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Modifier un pokémon par son numero de pokedex",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/pokedexId"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/Pokemon"
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Supprimer un pokémon par son numero de pokedex",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/pokedexId"
                    }
                ]
            }
        },
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Créer un utilisateur",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur créé"
                    },
                    "400": {
                        "description": "Requête invalide"
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Se connecter",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Connexion échouée"
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
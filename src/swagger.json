{
    "openapi": "3.1.0",
    "info": {
        "title": "Pokemon API",
        "description": "API permettant d'effectuer des opérations CRUD sur les pokémons. API réalisée dans le cadre d'un enseigenement",
        "version": "1.0.0",
        "contact": {
            "name": "Justin FONTAINE",
            "email": "justin.fontaine@etu.univ-littoral.fr"
        }
    },
    "components": {
        "securitySchemas": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Types": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 3
                    },
                    "name": {
                        "type": "string",
                        "example": "plante"
                    }
                }
            },
            "Pokemons": {
                "type": "object",
                "properties": {
                    "nom": {
                        "type": "string",
                        "example": "Bulbizarre"
                    },
                    "pokedexId": {
                        "type": "integer",
                        "example": 1
                    },
                    "type1_id": {
                        "type": "integer",
                        "example": 3
                    },
                    "type2_id": {
                        "type": "integer",
                        "example": 4,
                        "nullable": true
                    },
                    "pre_evolution": {
                        "type": "integer",
                        "example": 0,
                        "nullable": true
                    },
                    "post_evolution": {
                        "type": "integer",
                        "example": 2,
                        "nullable": true
                    }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/types": {
            "get": {
                "tags": [
                    "Types"
                ],
                "summary": "Récupérer la liste des types",
                "responses": {
                    "200": {
                        "description": "Liste des types",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Types"
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Aucun type à retourner"
                    },
                    "500": {
                        "description": "Erreur serveur"
                    }
                }
            }
        },
        "/types/{id}": {
            "get": {
                "tags": [
                    "Types"
                ],
                "summary": "Récupérer un type par son id",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Id du type recherché",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "format": "int64"
                        },
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Type trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Type non trouvé"
                    }
                }
            }
        },
        "/pokemons": {
            "get": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Récupérer la liste des pokémons",
                "responses": {
                    "200": {
                        "description": "Liste des pokémons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/pokemons/{id}": {
            "get": {
                "tags": [
                    "Pokémons"
                ],
                "summary": "Récupérer un pokémon par son id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id du pokémon recherché",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pokémon trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pokémon non trouvé"
                    }
                }
            }
        },
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Créer un utilisateur",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur créé"
                    },
                    "400": {
                        "description": "Requête invalide"
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Se connecter",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Connexion échouée"
                    }
                }
            }
        }
    }
}